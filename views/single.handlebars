 <section id="project">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">{{ project.name }}</h4>
      <p class="card-text">Showing the most recent builds for this project on Codeship.</p>
    </div>
    <ul id="builds" class="list-group list-group-flush">
      {{#each project.builds}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-2 build-status-icon">
            {{#ifEquals this.status "success"}}
            <i class="fa fa-check-circle success" aria-hidden="true"></i>
            {{/ifEquals}}
            {{#ifEquals this.status "waiting"}}
            <i class="fa fa-clock-o testing" aria-hidden="true"></i>
            {{/ifEquals}}
            {{#ifEquals this.status "testing"}}
            <i class="fa fa-clock-o testing" aria-hidden="true"></i>
            {{/ifEquals}}
            {{#ifEquals this.status "error"}}
            <i class="fa fa-times-circle failed" aria-hidden="true"></i>
            {{/ifEquals}}
            {{#ifEquals this.status "stopping"}}
            <i class="fa fa-times-circle failed" aria-hidden="true"></i>
            {{/ifEquals}}
            {{#ifEquals this.status "stopped"}}
            <i class="fa fa-times-circle failed" aria-hidden="true"></i>
            {{/ifEquals}}
          </div>
          <div class="col-sm-10">
            <p class="card-text">
              <strong>Commit Message:</strong> {{ this.commit_message }}<br/>
              <strong>Status:</strong>
              <span style="text-transform: capitalize">{{ this.status }}</span>
              <br/>
              {{#if this.finished_at}}
              <strong>Built at:</strong> {{ this.finished_at }}
              {{else}}
              {{#if this.queued_at}}
              <strong>Queued at:</strong> {{ this.queued_at }}
              {{/if}}
              {{/if}}
            </p>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
    <div class="card-body">
      <a href="{{ project.repository_url }}" target="_blank" class="card-link">
        {{ project.repository_provider }}
      </a>
    </div>
  </div>
</section>
